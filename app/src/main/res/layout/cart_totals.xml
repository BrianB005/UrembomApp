<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="HardcodedText"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#eeebdd"
                android:paddingStart="60dp"
                android:paddingEnd="20dp"
                android:paddingVertical="20dp"
                android:gravity="end"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal :"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#7B3F00"
                        />
                    <TextView
                        android:layout_marginStart="30dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kshs. 40.16"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#DC143C"
                        android:id="@+id/subtotals"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 % Tax :"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#7B3F00"
                        />
                    <TextView
                        android:layout_marginStart="30dp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kshs. 100.45"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#DC143C"
                        android:id="@+id/tax"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping fee :"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#7B3F00"
                        />
                    <TextView
                        android:layout_marginStart="30dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kshs. 40.16"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-black"
                        android:textColor="#DC143C"
                        android:id="@+id/shipping_fee"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="#7fff00"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total :"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#7FFF00"
                            />
                        <TextView
                            android:layout_marginStart="30dp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kshs. 600"
                            android:textSize="27sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black"
                            android:textColor="#7B3F00"
                            android:id="@+id/total_cost"
                            />
                    </LinearLayout>
                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        app:dividerColor="#7fff00"/>
                </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear cart"
            android:textColor="@color/white"
            android:backgroundTint="#DC143C"
            app:cornerRadius="13dp"
            android:id="@+id/clear_cart"
            android:layout_marginStart="13dp"

            tools:ignore="HardcodedText" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >
            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Checkout"
                android:textColor="@color/white"
                android:backgroundTint="@color/deep_pink"
                app:cornerRadius="13dp"
                android:id="@+id/check_out"
                tools:ignore="HardcodedText" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>