<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    tools:ignore="HardcodedText"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#fef5ed"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/pink"


        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                app:cardCornerRadius="15dp"
                android:elevation="5dp"
                android:translationZ="20dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/image1"
                    android:scaleType="center"
                    android:contentDescription="@null"
                    android:id="@+id/product_image"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generic Ear"
                tools:ignore="HardcodedText"
                android:layout_marginVertical="10dp"
                android:textSize="20sp"
                android:textColor="@color/deep_pink"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:id="@+id/product_name"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kshs. "
                    android:textColor="@color/deep_blue"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1065A5"
                    android:text="567"
                    android:id="@+id/product_price"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:gravity="end"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="Was Kshs. "
                        android:textColor="#112F45"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:background="@drawable/strike_through_line"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1065A5"
                        android:text="687"
                        android:id="@+id/product_initial_price"
                        android:textSize="16sp"
                        android:background="@drawable/strike_through_line"

                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:id="@+id/product_rating"
                android:progressTint="@color/deep_pink"
                style="?android:attr/ratingBarStyleIndicator"
                android:rating="5"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kenya Makeups.co"
                android:textColor="@color/deep_blue"
                android:textStyle="bold"
                android:textSize="16sp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/company_name"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="14dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The 5 different styles in the kit makes it easier for you to have makes it easier for "
                    android:textSize="16sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/deep_blue"
                    android:id="@+id/product_description"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_marginTop="-20dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More Info"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="#818283"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginStart="6dp"
                        android:padding="3dp"
                        android:id="@+id/show_more"
                        />
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttons"
                >
                <com.google.android.material.button.MaterialButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/deep_pink"
                    android:text="Add to cart"
                    android:textAllCaps="false"
                    app:cornerRadius="13dp"
                    android:id="@+id/add_to_cart"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">
                    <com.google.android.material.button.MaterialButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/pink"
                        android:id="@+id/check_product"
                        android:text="Check"
                        app:cornerRadius="12dp"
                        android:layout_gravity="end"
                        android:paddingHorizontal="30dp"

                        android:textAllCaps="false"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>




    </androidx.cardview.widget.CardView>

</LinearLayout>